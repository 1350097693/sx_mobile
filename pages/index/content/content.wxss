/* pages/index/content/content.wxss */
image{
  background-color: black;
}
/* 计数器 */
.count {
  position: absolute;
  display: flex;
  flex-direction: row-reverse;
  bottom: 13px;
  right: 10px;
}

.count-operator {
  color: rgb(224, 222, 222);
  padding:3px 6px;
  border: solid 1rpx rgb(224, 222, 222);
  font-size: 13px;
}
.count-number{
  padding-left: 10px;
  padding-right: 10px;
  border-top: solid 1rpx rgb(224, 222, 222);
  border-bottom: solid 1rpx rgb(224, 222, 222);
}
/* 弹窗 */
.weui-half-screen-dialog{
  height: 85vh;
}
.page__bd_spacing{
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
}
.btn{
  flex: 1;
  width:50%;
  height:35px;
  text-align: center;
  display: inline-block;
  color: white;
  background-color: red;
  padding-top:12px; 
}
#btn1{
  background-image: linear-gradient(138deg,#ffa600,#ffb000 77%,#ffbc00);
}
#btn2{
  background-image: linear-gradient(-41deg,#ff4f18,#ff2000 24%,#f10000);
}
.weui-btn_cell-default{
  margin-top: 100px;
  background-color: #ffb000 ;
  border-radius: 30px;
  padding:10px;
}
.weui-half-screen-dialog__hd{
  flex-direction:row-reverse;
  color: red;
}
.weui-media-box_appmsg .weui-media-box__hd {
  width: 80px;
  height:80px;
}