/* 计数器 */

.count {
  position: absolute;
  display: flex;
  flex-direction: row-reverse;
  bottom: 13px;
  right: 10px;
}

.count-operator {
  color: rgb(224, 222, 222);
  padding:3px 6px;
  border: solid 1rpx rgb(224, 222, 222);
  font-size: 13px;
}
.count-number{
  padding-left: 10px;
  padding-right: 10px;
  border-top: solid 1rpx rgb(224, 222, 222);
  border-bottom: solid 1rpx rgb(224, 222, 222);
}