form {
  background-color: rgb(220, 220, 220);
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
}

input {
  float: left;
  display: block;
  background-color: white;
  margin: 6px 10px 0 14px;
  padding-left: 8px;
  width: 70%;
  height: 40px;
  border-radius: 5px;

}

button {
  margin-top: 10px;
}
.word{
  display: flex;
  padding: 10px;
  width: 100%;
}
.word image{
  background-color: black;
  width: 40px;
  height:40px;
  border-radius: 5px;
}
.word-line{
margin-left: 10px;
width: 80%;
}
.word-name{
  font-size:11px; 
  display: block;
}
.word-content{
  background-color: white;
  padding: 6px 8px;
  border-radius: 8px;
  width: 83%;
  white-space:pre-wrap;
  word-wrap:break-word;
  word-break:break-all;
  font-size: 14px;
}
.right{
  flex-direction: row-reverse;
  width: 94%;
}
.word-line-right{
  display: flex;
  flex-direction: column;
  justify-content: right;
  align-items: flex-end;
  margin-right: 10px;
}
.word-content-right{
  background-color: rgb(173, 245, 65);
}